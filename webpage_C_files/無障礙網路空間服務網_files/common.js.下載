const common={methods:{getUrlField(key){if(key!==undefined){var params=this.getUrlParams(location.search);return params[key];}
var arr=location.pathname.split("/");return arr[arr.length-1].split("?")[0];},getUrlParams(searchString){var parse=function(params,pairs){var pair=pairs[0];var parts=pair.split('=');var key=decodeURIComponent(parts[0]);var value=decodeURIComponent(parts.slice(1).join('='));if(typeof params[key]==="undefined"){params[key]=value;}else{params[key]=[].concat(params[key],value);}
return pairs.length==1?params:parse(params,pairs.slice(1));}
return searchString.length==0?{}:parse({},searchString.substr(1).split('&'));},formatDate(date,template){if(date===null||date==""){return "";}
if(template===undefined){template='YYYY-MM-DD';}
return moment(date).format(template);},formatTaiwanToDate(date){var val=null;const datePattern=/^[1-9]\d{2}-\d{1,2}-\d{1,2}$/;if(datePattern.test(date)){const[year,month,day]=date.split('-');const westernYear=parseInt(year)+1911;return `${westernYear}-${month}-${day}`;}
return val;},validateEmail(email){var re=/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;return re.test(email);},isRequired(val){return(!val)==false;},getUrlencode(params){let urlencode='';Object.keys(params).forEach((key)=>{urlencode+=`param.${encodeURIComponent(key)}=${encodeURIComponent(params[key])}&`;});return urlencode;},}}
