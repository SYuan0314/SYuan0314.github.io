$(function(){$('.social-box a').click(function(){window.open(this.href,'','menubar=no,toolbar=no,height=600,width=600');return false;});Show();$('.history-back').click(function(){history.back();return false;});$('.reset-btn').click(function(){$('form')[0].reset();return false;});$.each($('input[type=text]'),function(k,v){var $this=$(v);$this.focus(function(){if($this.val()===$this.attr('placeholder')){$this.val('');}});});$('form').submit(function(){$.each($('input[type=text]'),function(k,v){var $this=$(v);if($this.val()===$this.attr('placeholder')){$this.val('');}});});var once=0;var facebook=function(){if(once>0){once=0;return false;}
if(!confirm('是否開啟新視窗前往facebook?')){$(this).blur();return false;}else{once++;}};$('[title="facebook"]').click(facebook);$('[title="facebook"]').keydown(function(e){if(e.keyCode===13){return facebook();}});var twitter=function(){if(once>0){once=0;return false;}
if(!confirm('是否開啟新視窗前往twitter?')){$(this).blur();return false;}else{once++;}};$('[title="twitter"]').click(twitter);$('[title="twitter"]').keydown(function(e){if(e.keyCode===13){return twitter();}});$('[name="page"]').click(function(){var pageNumber=$('#pagerGotoValue').val();if(pageNumber!=='前往頁數'){var $this=$(this);var url=$this.data('url');var query=$this.data('query');location.href=url+$('#pagerGotoValue').val()+query;}});});